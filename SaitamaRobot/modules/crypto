b = ""

a = data['bpi']['USD']['rate']
for i in a:
    if i in num:
        b += i
c = b.split(".")
d = int(c[0]) + int(c[1])/100 # successfully convert to int

e = int(d*74)
INR =("{:,}".format(e)) # convert to INR

f = int(d*4.22)
MYR = ("{:,}".format(f)) # convert to MYR

g = int(d*1.36)
AUD = ("{:,}".format(g))

h = int(d*14440)
IDR = ("{:,}".format(h))

